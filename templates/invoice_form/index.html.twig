{% extends 'base.html.twig' %}

{% block title %}Invoice creation page{% endblock %}

{% block body %}
{#  Navbar start #}
    <div class="pos-f-t">
    <nav class="navbar navbar-dark bg-primary">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="text-white">MENU</span>
        <span class="navbar-toggler-icon"></span>
        </button>
        <form class="form-inline my-2 my-lg-0">
        <input class="form-control mx-2" style="width: 50rem;" type="search" placeholder="Search for matters, documents, tasks, events..." aria-label="Search">
        </form>
        <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
            <a class="nav-link text-white" href="#">Timer<span class="sr-only">(current)</span></a>
        </li>      
        </ul>    
    </nav>
    <div class="collapse" id="navbarToggleExternalContent">
        <div class="bg-primary p-4">
        <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
            <a class="nav-link text-white" href="#">Home<span class="sr-only">(current)</span></a>
        </li>      
        </ul>    
        </div>
    </div>
    </div>
{# Navbar end #}

{# {{ path }} #}

{# Invoice form start #}
    <div class="container">
        <form method="post">
            <div class="form-group row">
                <label for="clients" class="col-sm-2 col-form-label">Client*</label>
                <div class="col-sm-10">
                    <input id="clients" type="text" name="invoice[clientName]" class="form-control" placeholder="Select/type client name" list="client">
                    <datalist id="client">
                        <option>Client A</option>
                        <option>Client B</option>
                        <option>Client C</option>
                    </datalist>
                </div>
            </div>
            <div class="form-group row">
                <label for="matter" class="col-sm-2 col-form-label">Matter</label>
                <div class="col-sm-10">
                    <input type="text" id="matter" name="invoice[matter]" class="form-control" placeholder="matter">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Client name:</label>
                <div class="col-sm-10">
                    <p id="client-name">Client placeholder</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Matter name:</label>
                <div class="col-sm-10">
                    <p id="matter-name">Matter placeholder</p>
                </div>
            </div>
            <div class="form-group row">
                <label for="issuer" class="col-sm-2 col-form-label">Issuer:</label>
                <div class="col-sm-10">
                    <select id="issuer" name="invoice[issuer]" class="form-control">
                    <option selected>Atanas Mihnev</option>
                    <option>Elvis Metodiev</option>
                    <option>Kiril Chuchukov</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="currency" class="col-sm-2 col-form-label">Currency:</label>
                <div class="col-sm-10">
                    <select id="currency" name="invoice[currency]" class="form-control">
                    <option selected>Euro</option>
                    <option>US dollars</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="invoiceNo" class="col-sm-2 col-form-label">Invoice No:</label>
                <div class="col-sm-10">
                    <input type="number" id="invoiceNo" name="invoice[invoiceId]" class="form-control" placeholder="Invoice no">
                </div>
            </div>
            <div class="form-group row">
            <label for="date" class="col-sm-2 col-form-label">Issuing date:</label>
                <div class="col-sm-10">                             
                    <div class="input-group date" style="width:10rem;" id="datepicker" data-provide="datepicker">                
                        <input type="text" class="form-control" name="invoice[dateIssued]" id="date">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary fas fa-calendar-alt"></button>
                        </div>
                    </div>                
                </div>
            </div>
            <div class="form-group row">
                <label for="description" class="col-sm-2 col-form-label">Services description:</label>
                <div class="col-sm-10">
                    <textarea id="description" class="form-control" name="invoice[description]" placeholder="Describe the services here"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label for="price" class="col-sm-2 col-form-label">Amount:</label>
                <div class="col-sm-10">
                    <input type="number" id="price" name="invoice[price]" class="form-control" placeholder="0.00">
                </div>
            </div>
            <div class="form-group row">
                <label for="vat" class="col-sm-2 col-form-label">VAT:</label>
                <div class="col-sm-10">                
                    <p>20%</p>
                </div>
            </div>         
            <button type="submit" class="btn btn-primary">Create invoice</button>
            <button id="clear" class="btn btn-primary">Clear</button>
            {{ form_row(invoiceForm._token) }}
        </form>
    </div>
{# Invoice form end #}
{% endblock %}
